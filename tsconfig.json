{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/authiko"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
  "module": "commonjs",
  "declaration": true,
  "removeComments": true,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "allowSyntheticDefaultImports": true,
  "target": "ES2021",
  "sourceMap": true,
  "outDir": "./dist",
  "baseUrl": "./",
  "incremental": true,
  "skipLibCheck": true,
  "strictNullChecks": true,
  "forceConsistentCasingInFileNames": true,
  "noImplicitAny": false,
  "strictBindCallApply": false,
  "noFallthroughCasesInSwitch": false,
  "paths": {
    "@authiko/authiko": ["libs/authiko/src"],
    "@authiko/authiko/*": ["libs/authiko/src/*"]
  }
}
